<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="16dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:gravity="center"
android:background="#E4E4E4"
tools:context="br.unipe.borracheiro.borracheiro.Login"
android:weightSum="1">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        app:srcCompat="@drawable/borracheiro" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/app_name"
        android:textSize="10pt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_senha"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/check_conectado"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:text="Manter Conectado" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/btn_entrar"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:background="#EBCF51"
        android:onClick="fazerLogin"
        android:text="Entrar" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/cadastre"
        android:layout_width="209dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:textColor="#000"
        android:text="NÃ£o possui conta? Cadastre-se" />


</LinearLayout>